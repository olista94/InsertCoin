<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Juegos_EDIT">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <!-- Descipcion Label -->
            <TextView
                android:id="@+id/je_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_gravity="center"
                android:layout_marginBottom="6dp"
                android:hint="Titulo"
                android:inputType="text"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/je_descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:hint="Descripcion"
                android:inputType="text" />

            <!-- Genero Label -->
            <EditText
                android:id="@+id/je_genero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="8dp"
                android:hint="Genero"
                android:inputType="text" />

            <!-- Plataforma Label -->
            <EditText
                android:id="@+id/je_plataforma"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:hint="Plataforma"
                android:inputType="text" />

            <!-- Nacionalidad Label -->
            <EditText
                android:id="@+id/je_nacionalidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="8dp"
                android:hint="Nacionalidad"
                android:inputType="text" />

            <EditText
                android:id="@+id/je_compania"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="8dp"
                android:hint="Compañia"
                android:inputType="text" />

            <!-- Nacionalidad Label -->
            <EditText
                android:id="@+id/je_anho"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="8dp"
                android:hint="Año"
                android:inputType="numberDecimal" />

            <!-- Nacionalidad Label -->
            <EditText
                android:id="@+id/je_edadRecomendada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="8dp"
                android:hint="Edad recomendada"
                android:inputType="text" />

            <!-- Nacionalidad Label -->


            <Button
                android:id="@+id/btn_editJuego"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="8dp"
                android:padding="12dp"
                android:text="Guardar cambios" />


        </LinearLayout>>
    </ScrollView>>

</androidx.constraintlayout.widget.ConstraintLayout>