<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="24dp"
    android:paddingTop="16dp"
    android:paddingRight="24dp">


    <!-- Titulo Label -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/ja_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:hint="Titulo"
                android:inputType="text" />


            <!-- Descipcion Label -->
            <EditText
                android:id="@+id/ja_descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:hint="Descripcion"
                android:inputType="text" />

            <!-- Genero Label -->
            <EditText
                android:id="@+id/ja_genero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="8dp"
                android:hint="Genero"
                android:inputType="text" />

            <!-- Plataforma Label -->
            <EditText
                android:id="@+id/ja_plataforma"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:hint="Plataforma"
                android:inputType="text" />

            <!-- Nacionalidad Label -->
            <EditText
                android:id="@+id/ja_nacionalidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="8dp"
                android:hint="Nacionalidad"
                android:inputType="text" />

            <EditText
                android:id="@+id/ja_compania"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="8dp"
                android:hint="Compa単ia"
                android:inputType="text" />

            <!-- Nacionalidad Label -->
            <EditText
                android:id="@+id/ja_anho"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="8dp"
                android:hint="A単o"
                android:inputType="numberDecimal" />

            <!-- Nacionalidad Label -->
            <EditText
                android:id="@+id/ja_edadRecomendada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="8dp"
                android:hint="Edad recomendada"
                android:inputType="text" />

            <!-- Nacionalidad Label -->
            <EditText
                android:id="@+id/ja_enlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="8dp"
                android:hint="Enlace"
                android:inputType="textWebEmailAddress" />

            <ImageView
                android:id="@+id/imgPortada"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="70dp"
                app:srcCompat="@drawable/icono" />

            <Button
                android:id="@+id/btn_addPortada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A単adir portada" />

            <Button
                android:id="@+id/btn_addJuego"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="8dp"
                android:padding="12dp"
                android:text="A単adir" />


        </LinearLayout>>



    </ScrollView>>

</LinearLayout>
